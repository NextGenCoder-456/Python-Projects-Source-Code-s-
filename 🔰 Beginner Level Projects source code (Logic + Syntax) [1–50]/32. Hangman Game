import random

words = ["python", "school", "hangman", "ankush", "developer"]
word = random.choice(words)
guesses = ''
turns = 6

while turns > 0:
    failed = 0
    for char in word:
        if char in guesses:
            print(char, end=" ")
        else:
            print("_", end=" ")
            failed += 1
    print()

    if failed == 0:
        print("🎉 You Win!")
        break

    guess = input("Guess a letter: ").lower()
    guesses += guess

    if guess not in word:
        turns -= 1
        print("Wrong guess. Turns left:", turns)
        if turns == 0:
            print("☠️ You Lose! The word was:", word)
