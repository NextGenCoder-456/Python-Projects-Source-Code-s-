while True:
    user = input("You: ").lower()
    if "hello" in user:
        print("Bot: Hi there!")
    elif "how are you" in user:
        print("Bot: I'm just code, bro. But I'm vibing.")
    elif "bye" in user:
        print("Bot: Goodbye! ðŸ‘‹")
        break
    else:
        print("Bot: I didn't get that.")
