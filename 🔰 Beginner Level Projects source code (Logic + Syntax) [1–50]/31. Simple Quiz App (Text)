questions = {
    "What is the capital of India? ": "delhi",
    "Who wrote Ramayana? ": "valmiki",
    "2 + 2 = ? ": "4"
}

score = 0
for q, a in questions.items():
    ans = input(q).lower()
    if ans == a:
        print("✅ Correct!")
        score += 1
    else:
        print("❌ Wrong!")

print(f"Your Score: {score}/{len(questions)}")
