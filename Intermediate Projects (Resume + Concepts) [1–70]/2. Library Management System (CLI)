books = []

def add_book():
    title = input("Enter book title: ")
    author = input("Enter author: ")
    books.append({"title": title, "author": author})
    print("‚úÖ Book added!")

def view_books():
    for b in books:
        print(f"üìò {b['title']} by {b['author']}")

while True:
    print("\n1. Add Book\n2. View Books\n3. Exit")
    ch = input("Choice: ")
    if ch == "1":
        add_book()
    elif ch == "2":
        view_books()
    elif ch == "3":
        break
    else:
        print("‚ùå Invalid choice.")
