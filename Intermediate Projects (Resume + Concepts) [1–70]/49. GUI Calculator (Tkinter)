import tkinter as tk

def click(event):
    btn_text = event.widget.cget("text")
    if btn_text == "=":
        try:
            result = str(eval(str(entry.get())))
            entry.delete(0, tk.END)
            entry.insert(0, result)
        except:
            entry.delete(0, tk.END)
            entry.insert(0, "Error")
    elif btn_text == "C":
        entry.delete(0, tk.END)
    else:
        entry.insert(tk.END, btn_text)

root = tk.Tk()
root.title("Calculator")

entry = tk.Entry(root, font="Arial 20")
entry.pack(fill="both", ipadx=8, pady=10)

btns = [
    ["7", "8", "9", "/"],
    ["4", "5", "6", "*"],
    ["1", "2", "3", "-"],
    ["C", "0", "=", "+"]
]

for row in btns:
    f = tk.Frame(root)
    for btn in row:
        b = tk.Button(f, text=btn, font="Arial 18", width=5)
        b.bind("<Button-1>", click)
        b.pack(side="left", padx=5, pady=5)
    f.pack()

root.mainloop()
