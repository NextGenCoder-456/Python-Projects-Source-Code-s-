cards = {
    "Capital of India": "New Delhi",
    "Python creator": "Guido van Rossum",
    "Speed of light (m/s)": "299792458",
}

def flashcard_game():
    correct = 0
    for q, a in cards.items():
        print("\nQuestion:", q)
        ans = input("Your answer: ")
        if ans.lower().strip() == a.lower():
            print("✅ Correct!")
            correct += 1
        else:
            print("❌ Wrong! Correct answer:", a)
    print(f"\nYou got {correct}/{len(cards)} correct.")

flashcard_game()
