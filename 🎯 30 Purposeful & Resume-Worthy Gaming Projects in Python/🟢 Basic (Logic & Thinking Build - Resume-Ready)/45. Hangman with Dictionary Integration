import random

words = ["python", "hangman", "challenge", "developer", "sigma"]

def hangman():
    word = random.choice(words)
    guessed = ["_"] * len(word)
    tries = 6
    used = set()

    while tries > 0 and "_" in guessed:
        print("\nWord:", " ".join(guessed))
        print("Tries left:", tries)
        print("Used letters:", ", ".join(used))

        guess = input("Guess a letter: ").lower()
        if guess in used:
            print("❗ Already used!")
            continue

        used.add(guess)

        if guess in word:
            for i, ch in enumerate(word):
                if ch == guess:
                    guessed[i] = guess
        else:
            tries -= 1

    if "_" not in guessed:
        print("✅ You win! Word was:", word)
    else:
        print("❌ You lost! Word was:", word)

hangman()
