import random
import time

def whack_a_mole():
    score = 0
    duration = 10  # seconds
    start = time.time()
    while time.time() - start < duration:
        mole_pos = random.randint(1, 5)
        print("\nWhack the mole at position:", mole_pos)
        try:
            guess = int(input("Enter position (1â€“5): "))
            if guess == mole_pos:
                print("ðŸŽ¯ Hit!")
                score += 1
            else:
                print("ðŸ™ˆ Miss!")
        except:
            print("âŒ Invalid input")
    print("\nâ° Time's up! Final score:", score)

whack_a_mole()
