import time
import random

def typing_test():
    texts = [
        "The quick brown fox jumps over the lazy dog.",
        "Python is an easy to learn programming language.",
        "Artificial intelligence is the future of technology."
    ]
    text = random.choice(texts)
    print("Type this:\n", text)
    input("Press Enter when ready...")
    start = time.time()
    typed = input("Start typing: ")
    end = time.time()

    time_taken = round(end - start, 2)
    words = len(typed.split())
    wpm = round(words / (time_taken / 60), 2)

    print(f"\nTime: {time_taken}s | WPM: {wpm}")
    print("Accuracy:", accuracy(text, typed), "%")

def accuracy(original, typed):
    correct = sum(o == t for o, t in zip(original, typed))
    return round((correct / len(original)) * 100, 2)

typing_test()
