import re
import pandas as pd

emails = pd.read_csv("emails.csv")  # should have 'subject' column

def classify_email(subject):
    subject = subject.lower()
    if "invoice" in subject or re.search(r'\bpayment\b', subject):
        return 'Finance'
    elif "meeting" in subject or "schedule" in subject:
        return 'Calendar'
    elif "job" in subject or "resume" in subject:
        return 'HR'
    else:
        return 'General'

emails['label'] = emails['subject'].apply(classify_email)
print(emails.head())
