from flask import Flask, render_template, request, redirect, session
import sqlite3

app = Flask(__name__)
app.secret_key = 'ankush_secret'

def get_db():
    conn = sqlite3.connect('expenses.db')
    conn.execute('CREATE TABLE IF NOT EXISTS users(id INTEGER PRIMARY KEY, username TEXT, password TEXT)')
    conn.execute('CREATE TABLE IF NOT EXISTS expenses(id INTEGER PRIMARY KEY, user TEXT, amount REAL, category TEXT)')
    return conn

@app.route('/', methods=['GET', 'POST'])
def login():
    if request.method == 'POST':
        user, pw = request.form['username'], request.form['password']
        conn = get_db()
        cursor = conn.execute('SELECT * FROM users WHERE username=? AND password=?', (user, pw))
        if cursor.fetchone():
            session['user'] = user
            return redirect('/dashboard')
    return render_template('login.html')

@app.route('/dashboard', methods=['GET', 'POST'])
def dashboard():
    if 'user' not in session:
        return redirect('/')
    conn = get_db()
    if request.method == 'POST':
        amt = float(request.form['amount'])
        cat = request.form['category']
        conn.execute('INSERT INTO expenses(user, amount, category) VALUES (?, ?, ?)', (session['user'], amt, cat))
        conn.commit()
    cursor = conn.execute('SELECT amount, category FROM expenses WHERE user=?', (session['user'],))
    expenses = cursor.fetchall()
    return render_template('dashboard.html', expenses=expenses)

if __name__ == '__main__':
    app.run(debug=True)
