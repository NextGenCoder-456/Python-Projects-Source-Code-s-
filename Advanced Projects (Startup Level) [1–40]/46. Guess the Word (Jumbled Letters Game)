import random

words = ["banana", "computer", "india", "school", "language"]

def jumbled_game():
    word = random.choice(words)
    jumbled = ''.join(random.sample(word, len(word)))
    print("Guess the word:", jumbled)

    guess = input("Your guess: ")
    if guess.lower() == word:
        print("🎉 Correct!")
    else:
        print("❌ Wrong! It was:", word)

jumbled_game()
