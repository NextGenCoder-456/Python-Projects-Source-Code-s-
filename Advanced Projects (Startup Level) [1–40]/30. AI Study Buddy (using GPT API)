import openai

openai.api_key = "your-api-key"

def study_buddy(question):
    messages = [
        {"role": "system", "content": "You are a smart study assistant who explains clearly."},
        {"role": "user", "content": question}
    ]
    response = openai.ChatCompletion.create(
        model="gpt-3.5-turbo",
        messages=messages
    )
    return response['choices'][0]['message']['content']

query = input("Ask your study question: ")
answer = study_buddy(query)
print("Study Buddy Answer:", answer)
