import random
import time

def whack_a_mole():
    score = 0
    duration = 10  # seconds
    start = time.time()
    while time.time() - start < duration:
        mole_pos = random.randint(1, 5)
        print("\nWhack the mole at position:", mole_pos)
        try:
            guess = int(input("Enter position (1–5): "))
            if guess == mole_pos:
                print("🎯 Hit!")
                score += 1
            else:
                print("🙈 Miss!")
        except:
            print("❌ Invalid input")
    print("\n⏰ Time's up! Final score:", score)

whack_a_mole()
