import pandas as pd
import streamlit as st
from prophet import Prophet

st.title("ðŸ“ˆ Time Series Forecasting App")

uploaded_file = st.file_uploader("Upload time series CSV (Date, Value)", type="csv")

if uploaded_file:
    df = pd.read_csv(uploaded_file)
    df.columns = ['ds', 'y']  # Prophet expects these column names
    
    st.write("Preview:", df.head())

    model = Prophet()
    model.fit(df)

    future = model.make_future_dataframe(periods=30)
    forecast = model.predict(future)

    st.write("Forecast:", forecast[['ds', 'yhat', 'yhat_lower', 'yhat_upper']].tail())

    st.line_chart(forecast[['ds', 'yhat']].set_index('ds'))

Note: Install with: pip install prophet streamlit
